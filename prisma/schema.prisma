// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  role     String
  Course   Course[]
  Question Question[]

  @@map("user")
}

model Course {
  id        Int        @id @default(autoincrement())
  teacherId Int
  teacher   User       @relation(fields: [teacherId], references: [id])
  title     String
  duration  Int
  Question  Question[]

  @@map("course")
}

model Question {
  id            Int        @id @default(autoincrement())
  idCourse      Int
  idStudent     Int
  course        Course     @relation(fields: [idCourse], references: [id], onDelete: Cascade)
  student       User       @relation(fields: [idStudent], references: [id], onDelete: Cascade)
  question_text String
  Response      Response[]

  @@map("question")
}

model Response {
  id            Int      @id @default(autoincrement())
  idQuestion    Int
  question      Question @relation(fields: [idQuestion], references: [id], onDelete: Cascade)
  response_text String

  @@map("response")
}
